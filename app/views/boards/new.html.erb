<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      
      <% if @board.errors.any? %>
        <div class="alert alert-warning">
        <ul>
          <% @board.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <%= render 'form', board: @board %>
    </div>
  </div>
</div>
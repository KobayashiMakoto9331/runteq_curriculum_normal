      <tr id="comment-<%= comment.id %>">
        <td style="width: 60px">
          <%= image_tag 'sample.jpg', class: "rounded-circle", size: '50x50' %>
        </td>

          <td>
            <h3 class="small"><%= comment.user.decorate.full_name %></h3>
            <div id="js-comment-<%= comment.id %>">
              <p><%= comment.body %></p>
            </div>
       
            <div style="display: none;">
              <textarea class="form-control mb-1">コメントで</textarea>
              <button class="btn btn-light">キャンセル</button>
              <button class="btn btn-success">更新</button>
            </div>
          </td>

          <td class="action">
            <% if comment.user_id == current_user.id %>
              <ul class="list-inline justify-content-center" style="float: right;">
                <li class="list-inline-item">
                  <%= link_to edit_comment_path do %>
                    <i class="fa fa-edit fa-2x"></i>
                  <% end %>
                </li>
                <li class="list-inline-item">
                  <%= link_to comment_path, method: :delete do %>
                     <i class="fa fa-trash fa-2x"></i> 
                  <% end %>
                </li>
              </ul>
            <% end %>
          </td>
          
      </tr>
<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('defaults.title')%></h1>

      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:id)) %></th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:full_name)) %></th>
          <td><%= @user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:role)) %></th>
          <td><%= @user.role_i18n %></td>
        </tr>

        <td>
          <%= link_to t('defaults.edit'), edit_admin_user_path(@user), class: 'btn btn-success float-right' %>
          <%= link_to t('defaults.delete'), admin_user_path(@user),method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger float-right' %>
        </td>

      </table>
    </div>
  </div>
</div>

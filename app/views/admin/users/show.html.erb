<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('defaults.title')%></h1>
      <%= link_to t('defaults.edit'), edit_admin_user_path(@user), class: 'btn btn-success float-right' %>
      <%= link_to t('defaults.delete'), admin_user_path(@user),method: :delete, class: 'btn btn-danger float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:id)) %></th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:last_name)) %></th>
          <td><%= @user.last_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:role)) %></th>
          <td><%= @user.role %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
